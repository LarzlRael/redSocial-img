<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image">Upload Image</i>
        </h3>
    </div>
    <div class="card-body">
        <form action="/image" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile">
                            Choose File</label>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Title for the image" required id="">
            </div>
            <textarea name="description" id="" placeholder="Description for the image" class="form-control" rows="2"
                required></textarea>
            <div class="form-group">
                <button class="btn btn-success" type="submit">
                    <i class="fa fa-upload"></i>
                    Upload your Image
                </button>
            </div>
        </form>
    </div>
</div>