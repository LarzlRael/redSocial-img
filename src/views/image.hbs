<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{oneImage.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{oneImage.uniqueID}}">
            <i class="fa fa-times">Delete</i>
        </button>

    </div>
    <div class="card-body">
        <p>{{oneImage.description}}</p>
        <img src="/public/upload/{{oneImage.fileName}}" alt="" class="img-fluid">
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{oneImage.fileName}}"><i class="fa fa-thumbs-up">Me
                gusta</i></button>
        <p>
            <span class="likes-count">{{oneImage.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>

            <i class="fas fa-eye"></i>{{oneImage.views}}
        </p>
        <p><i class="far fa-block"></i>{{timeAgo oneImage.timeStap}}</p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btn-toggle-comment"><i class="fa fa-comment"></i>Post a Commnet</button>

    </div>
    <div class="card-body">
        <blockquote>
            <form action="/image/{{oneImage.uniqueID}}/comment" method="post">
                <div class="form-group">
                    <input type="text" name="name" id="" placeholder="Name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="email" id="" placeholder="Email" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="comment" id="" placeholder="Your Comment" rows="3" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Post
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
            <li class="list-group-item">
                <div class="row">
                    <a href="#" class="col text-center">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="{{gravatar}}">
                    </a>
                    <blockquote class="col">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{name}}-{{timeAgo timesStamp}}</footer>
                    </blockquote>
                </div>
            </li>
            {{/each}}

        </ul>
    </div>
</div>